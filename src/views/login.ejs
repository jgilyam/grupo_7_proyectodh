<!DOCTYPE html>
<html lang="es">
  <head>
    <%- include ("./partials/head") %>
    <title>Login</title>
    <link rel="stylesheet" href="/css/login.css" />
  </head>
  <body>
    <%- include("./partials/header") %>
    <main>
      <div class="errores">
        <ul></ul>
      </div>
      <form class="form-login" id="form-log" action="/user/login" method="POST">
        <div class="container-input">
          <div class="input1-group">
            <input
              type="email"
              placeholder="Email@email.com"
              class="input1"
              name="email"
              id="email"
            />
            <% if (locals.errors && errors.email) { %>
            <div class="text-denger"><%= errors.email.msg %></div>
            <% } %>
          </div>
          <div class="text-denger" id="danger-email"></div>
          <% if (locals.errors && errors.email) { %>
          <div class="text-denger"><%= errors.email.msg %></div>
          <% } %>
        </div>
          <div class="input2-group">
            <input
              type="password"
              placeholder="Contraseña"
              class="input2"
              required
              pattern=".{8,}"
              title="min 8 letras alfanumericas"
              name="password"
              maxlength="8"
              id="password"
            />
            <div class="img-ojo" id="ojoLogin">
              <i class="fa-regular fa-eye-slash"></i>
              <i class="fa-regular fa-eye"></i>
            </div>
            <!-- <img src="/img/ojo.png" alt="" class="img-ojo" /> -->
          </div>
          <% if (locals.errors && errors.password) { %>
          <div class="text-denger"><%= errors.password.msg %></div>
          <% } %>
        </div>
        <div class="text-denger" id="danger-password"></div>
                  <% if (locals.errors && errors.password) { %>
                  <div class="text-denger"><%= errors.password.msg %></div>
                  <% } %>
                </div>
        <div class="container-preguntas">
          <div class="container-contra-olvidada">
            <a href="#" class="contra-olvidada">¿Olvidaste tu contraseña?</a>
          </div>
          <div class="container-recordar">
            <input
              type="checkbox"
              name="recordar"
              value="recordar"
              id="recordar"
            />
            <label for="recordar"> Recordar usuario y contraseña </label>
          </div>
          <button type="submit" class="btn-enviar-formulario">
            INICIAR SEIÓN
          </button>
          <div class="not-usuario">
            <p class="not-usuario-text">¿No eres usuario aún?</p>
            <a href="/user/register" class="registro-login">Registrate</a>
          </div>
        </div>
      </form>
    </main>
    <%- include ("./partials/footer") %>
    <script>
      const ojoLogin = document.querySelector("#ojoLogin");
      const tipo = document.getElementById("password");

      ojoLogin.addEventListener("click", () => {
        if (tipo.type == "password") {
          tipo.type = "text";
        } else {
          tipo.type = "password";
        }
        ojoLogin.classList.toggle("active");
      });
    </script>
    <script src="/js/loginUserValidation.js"></script>
  </body>
</html>
