<!DOCTYPE html>
<html lang="es">
  <head>
    <%- include ("./partials/head") %>
    <title>ProductCart</title>
    <link rel="stylesheet" href="/css/productCart.css" />
  </head>
  <body>
    <%- include("./partials/header") %>

    <h3>CARRITO DE COMPRAS</h3>
    <section class="section-desktop">
      <div class="tabla-cabezera">
        <p class="tabla-producto">PRODUCTO</p>
        <p class="tabla-subtitulo">PRECIO</p>
        <p class="tabla-subtitulo">CANTIDAD</p>
        <p class="tabla-subtotal">SUBTOTAL</p>
      </div>
      <!-- PRODUCTO PRUEBA 1 -->
      <div class="container-cards-carrito">
        <div class="conteiner-caja" id="card-n0">
          <div class="caja1">
            <div class="producto-prueba-1">
              <a class="deleted" href="#"
                ><i class="far fa-times-circle"></i
              ></a>
              <div class="imagen-1">
                <a href="#"
                  ><img src="/img/muchosPlatos.jpg" alt="plato" width="130px" 
                /></a>
              </div>
              <a class="parrafo1" href="#">Plato de algarrobo 24cm</a>
            </div>
          </div>
          <div class="caja1-precio">
            <p>$900</p>
          </div>
          <div class="caja1-cantidad">
            <form action="">
              <input type="number" min="0" max="9" value="1" />
            </form>
          </div>
          <div class="caja1-subtotal">
            <p>$900</p>
          </div>
        </div>
      </div>
    </section>
    <!-- TOTAL CARRITO -->
    <nav class="total-carrito">
      <p class="total-carrito-titulo">Total del carrito</p>
      <div class="bloque-a">
        <p class="total-subtotal">SUBTOTAL</p>
      </div>
      <p class="total-monto">$13.700</p>
      <div class="bloque">
        <p class="total-envio">ENVIO</p>
        <div class="total-envio-opc">
          <form action="">
            <ol>
              <li>
                <label for="#"></label>
                <input type="radio" name="envio" /> Retiro en el local
              </li>
              <li>
                <label for="#"></label>
                <input type="radio" name="envio" />A domicilio (calcular)
              </li>
            </ol>
          </form>
          <form action="">
            <a class="cambiar-direccion" href="#">Cambiar direcci√≥n</a>
          </form>
        </div>
      </div>
      <div class="bloque-a">
        <p class="total">TOTAL</p>
      </div>
      <p class="total-monto">$13.700</p>
      <div class="fin">
        <a href="#">Finalizar Compra</a>
      </div>
    </nav>
    <%- include ("./partials/footer") %>
    <script src="/js/carritoDef.js"></script>
  </body>
</html>
