<!DOCTYPE html>
<html lang="en">
  <head>
    <%- include("./partials/head") %>
    <link rel="stylesheet" href="/css/productForm.css" />
  </head>
  <body>
    <div class="contenedor">
      <nav class="nav-list">
        <div class="admin">Administrador</div>
        <ul class="menu-items">
          <li><a href="#">Administrar Pedido</a></li>
          <li><a href="#">Administrar Usuarios</a></li>
          <li><a href="#">Crear Producto</a></li>
          <li><a href="#">Modificar Producto</a></li>
          <li>
            <a href="#">Cerrar sesión <i class="fas fa-sign-in"></i></a>
          </li>
        </ul>
        <span class="burguer">
          <i class="fas fa-bars"></i>
        </span>
      </nav>

      <div class="contenedor-form">
        <div class="errores">
          <ul></ul>
        </div>
        <form
          class="form"
          id="form-create"
          action="/producto"
          method="POST"
          enctype="multipart/form-data"
        >
          <div class="titulo-form-c">
            <h1>Crear producto</h1>
          </div>
          <div class="contenedor-hijo">
            <label class="titulo">Nombre del Producto</label>
            <div class="nombre-producto">
              <input
                type="text"
                id="name"
                name="name"
                placeholder="NombreProducto"
                maxlength="30"
                value="<%= locals.oldData && oldData.name %>"
              />
              <div class="text-denger" id="danger-name"></div>
                  <% if (locals.errors && errors.name) { %>
                  <div class="text-denger"><%= errors.name.msg %></div>
                  <% } %>
            </div>
          </div>
          <div class="contenedor-hijo-descripcion">
            <label class="titulo" for="">Breve descripción</label>
            <div class="descripcion">
              <textarea
                name="description"
                id="description-ta"
                cols="30"
                rows="10"
                value="<%= locals.oldData && oldData.description %>"
              ></textarea>
              <div class="text-denger" id="danger-description"></div>
                  <% if (locals.errors && errors.description) { %>
                  <div class="text-denger"><%= errors.description.msg %></div>
                  <% } %>
            </div>
          </div>
          <div class="contenedor-hijo">
            <label class="titulo" for="">Imagen del producto</label>
            <input class="boton-img" type="file" name="image" id="image" />
          </div>
          <div class="contenedor-opc">
            <div class="col-12-col-md-6">
              <label for="category" class="form-label">Categoría:</label>
              <select name="category" id="category" class="form-input">
                <% for (let i = 0; i < category.length; i++) { %>
                <option value="<%= category[i].id_category %>">
                  <%=category[i].name%>
                </option>
                <%}%>
              </select>
            </div>
            <div class="col-12-col-md-6">
              <label for="types" class="form-label">Sección:</label>
              <select name="types" id="types" class="form-input">
                <% for (let i = 0; i < typess.length; i++) { %>
                <option value="<%= typess[i].id_type %>">
                  <%=typess[i].name%>
                </option>
                <%}%>
              </select>
            </div>
          </div>
          <section class="precio-final">
            <div class="contenedor-hijo-b">
              <label class="titulo">Precio:</label>
              <input
                class="precio"
                type="number"
                id="price"
                name="price"
                placeholder="Ej. 100"
                min="1.00"
              />$
            </div>
            <div class="contenedor-hijo-b">
              <label class="titulo">Descuento:</label>
              <input
                class="precio"
                type="number"
                id="discount"
                name="discount"
                placeholder="Ej. 10"
              />%
            </div>
            <div class="contenedor-hijo-b">
              <label class="titulo">Stock:</label>
              <input
                class="precio"
                type="number"
                id="stock"
                name="stock"
                placeholder="Ej. 10"
              />Uni
            </div>
          </section>
          <div class="contenedor-hijo-c">
            <button type="submit">Crear</button>
            <button type="reset">Cancelar</button>
          </div>
        </form>
      </div>
    </div>
    <script src="/js/productCreateValidation.js"></script>
  </body>
</html>
