<!DOCTYPE html>
<html lang="en">
  <head>
    <%- include("./partials/head") %>
    <link rel="stylesheet" href="/css/productForm.css" />
  </head>
  <body>
    <div class="contenedor">
      <nav class="nav-list">
        <div class="admin">Administrador</div>
        <ul class="menu-items">
          <li><a href="#">Administrar Pedido</a></li>
          <li><a href="#">Administrar Usuarios</a></li>
          <li><a href="#">Crear Producto</a></li>
          <li><a href="#">Modificar Producto</a></li>
          <li>
            <a href="#">Cerrar sesión <i class="fas fa-sign-in"></i></a>
          </li>
        </ul>
        <span class="burguer">
          <i class="fas fa-bars"></i>
        </span>
      </nav>

      <div class="contenedor-form">
        <form
          class="form"
          action="/producto"
          method="POST"
          enctype="multipart/form-data"
        >
          <div class="titulo-form-c">
            <h1>Crear producto</h1>
          </div>
          <div class="contenedor-hijo">
            <label class="titulo">Nombre del Producto</label>
            <div class="nombre-producto">
              <input
                type="text"
                id="name"
                name="name"
                placeholder="NombreProducto"
                maxlength="30"
              />
            </div>
          </div>
          <div class="contenedor-hijo-descripcion">
            <label class="titulo" for="">Breve descripción</label>
            <div class="descripcion">
              <textarea
                name="description"
                id="description"
                cols="30"
                rows="10"
              ></textarea>
            </div>
          </div>
          <div class="contenedor-hijo">
            <label class="titulo" for="">Imagen del producto</label>
            <input class="boton-img" type="file" name="image" id="image" />
          </div>
          <div class="contenedor-opc">
            <div class="col-12-col-md-6">
              <label for="category" class="form-label">Categoría:</label>
              <select name="category" id="category" class="form-input">
                <option value="">Elegí</option>
                <option value="nuevo">Nuevo</option>
                <option value="ofertas">Oferta</option>
                <option value="masVendido">Mas vendido</option>
              </select>
            </div>
            <div class="col-12-col-md-6">
              <label for="types" class="form-label">Sección:</label>
              <select name="types" id="types" class="form-input">
                <option value="">Elegí</option>
                <option value="Bowls">Bowls</option>
                <option value="Posa vasos">Posa vasos</option>
                <option value="Platos">Platos</option>
                <option value="Pizzera">Pizzera</option>
                <option value="Asado">Asado</option>
                <option value="Tabla corta">Tabla corta</option>
                <option value="Tabla larga">Tabla larga</option>
              </select>
            </div>
          </div>
          <section class="precio-final">
            <div class="contenedor-hijo-b">
              <label class="titulo">Precio:</label>
              <input
                class="precio"
                type="number"
                id="price"
                name="price"
                placeholder="Ej. 100"
                min="1.00"
              />$
            </div>
            <div class="contenedor-hijo-b">
              <label class="titulo">Descuento:</label>
              <input
                class="precio"
                type="number"
                id="discount"
                name="discount"
                placeholder="Ej. 10"
              />%
            </div>
            <div class="contenedor-hijo-b">
              <label class="titulo">Stock:</label>
              <input
                class="precio"
                type="number"
                id="stock"
                name="stock"
                placeholder="Ej. 10"
              />Uni
            </div>
          </section>
          <div class="contenedor-hijo-c">
            <button type="submit">Crear</button>
            <button type="reset">Cancelar</button>
          </div>
        </form>
      </div>
    </div>
  </body>
</html>
