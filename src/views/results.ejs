<!DOCTYPE html>
<html lang="en">
  <head>
    <%- include ("./partials/head") %>
    <title>Productos</title>
  </head>
  <body>
    <%- include("./partials/header") %>
    <main>
      <section class="main-recomend">
        <% if (results != "") { %>
          <h3 class="titulos" id="titulos">Resultado de busqueda para:<br>"<%= keyword %>"</h3>
          <div class="container-article-busqueda">
           <% results.forEach(product => { %>
            <%-include("./partials/product2",{product:product}) %> <% }) %>
          </div>
          <% }else{%>
            <h3 class="titulos" id="titulos">No se encontraron resultados para: <br>" <%= keyword %>"</h3>
          <% } %>
        
      </section>
    </main>
    <%- include ("./partials/footer") %>
  </body>
</html>
