  <body>
    <%- include("./partials/header") %>

    <h3>CARRITO DE COMPRAS</h3>
    <section class="section-desktop">
      <div class="tabla-cabezera">
        <p class="tabla-producto">PRODUCTO</p>
        <p class="tabla-subtitulo">PRECIO</p>
        <p class="tabla-subtitulo">CANTIDAD</p>
        <p class="tabla-subtotal">SUBTOTAL</p>
      </div>
      <!-- PRODUCTO PRUEBA 1 -->
      <div class="caja1">
        <div class="producto-prueba-1">
          <a class="deleted" href="#"><i class="far fa-times-circle"></i></a>
          <div class="imagen-1">
            <a href="#"
              ><img src="/img/muchosPlatos.jpg" alt="plato" width="130px"
            /></a>
          </div>
          <a class="parrafo1" href="#">Plato de algarrobo 24cm</a>
        </div>
      </div>
      <div class="caja1-precio">
        <p>$900</p>
      </div>
      <div class="caja1-cantidad">
        <form action="">
          <input type="number" min="0" max="9" value="1" />
        </form>
      </div>
      <div class="caja1-subtotal">
        <p>$900</p>
      </div>
      <!-- Linea -->
      <div class="linea">
        <p></p>
      </div>
      <!-- Linea -->
      <!-- PRODUCTO PRUEBA 2 -->
      <div class="caja1">
        <div class="producto-prueba-1">
          <a class="deleted" href="#"><i class="far fa-times-circle"></i></a>
          <div class="imagen-1">
            <a href="#"
              ><img src="/img/tabla5.jpg" alt="tabla" width="130px"
            /></a>
          </div>
          <a class="parrafo1" href="#"
            >Tabla de madera de cancharana 39 x 30 x 2 cm</a
          >
        </div>
      </div>
      <div class="caja1-precio">
        <p>$6.000</p>
      </div>
      <div class="caja1-cantidad">
        <form action="">
          <input type="number" min="0" max="9" value="1" />
        </form>
      </div>
      <div class="caja1-subtotal">
        <p>$6.000</p>
      </div>
      <!-- Linea -->
      <div class="linea">
        <p></p>
      </div>
      <!-- Linea -->
      <!-- PRODUCTO PRUEBA 3 -->
      <div class="caja1">
        <div class="producto-prueba-1">
          <a class="deleted" href="#"><i class="far fa-times-circle"></i></a>

          <div class="imagen-1">
            <a href="#"
              ><img src="/img/tabla4.jpg" alt="tabla" width="130px"
            /></a>
          </div>
          <a class="parrafo1" href="#">
            Tabla de madera con canaleta y agarradera 44 x 30 x 2 cm</a
          >
        </div>
      </div>
      <div class="caja1-precio">
        <p>$6.800</p>
      </div>
      <div class="caja1-cantidad">
        <form action="">
          <label for=""></label>
          <input type="number" min="0" max="9" value="1" />
        </form>
      </div>
      <div class="caja1-subtotal">
        <p>$6.800</p>
      </div>
    </section>
    <section class="section-mobile">
      <article class="article">
        <i class="fa-solid fa-circle-xmark" id="clouse"></i>
        <div class="container-img">
          <img src="/img/muchosPlatos.jpg" alt="tabla" class="img-carrito" />
        </div>
        <div class="container-article">
          <div class="producto-descripcion">
            <h2>Producto:</h2>
            <a>Plato algarrobo 24cm</a>
          </div>
          <div class="precio">
            <h2>Precio:</h2>
            <p>$900</p>
          </div>
          <div class="cantidad">
            <h2>Cantidad :</h2>
            <input type="number" min="0" max="9" value="1" />
          </div>
          <div class="total-individual">
            <h2>Subtotal:</h2>
            <p>$900</p>
          </div>
        </div>
      </article>
    </section>
    <section class="section-mobile">
      <article class="article">
        <i class="fa-solid fa-circle-xmark" id="clouse"></i>
        <div class="container-img">
          <img src="/img/tabla5.jpg" alt="tabla" class="img-carrito" />
        </div>
        <div class="container-article">
          <div class="producto-descripcion">
            <h2>Producto:</h2>
            <a>Tabla de madera de cancharana 39 x 30 x 2 cm</a>
          </div>
          <div class="precio">
            <h2>Precio:</h2>
            <p>$6000</p>
          </div>
          <div class="cantidad">
            <h2>Cantidad :</h2>
            <input type="number" min="0" max="9" value="1" />
          </div>
          <div class="total-individual">
            <h2>Subtotal:</h2>
            <p>$6000</p>
