    </section>
    <section class="section-mobile">
      <article class="article">
        <i class="fa-solid fa-circle-xmark" id="clouse"></i>
        <div class="container-img">
          <img src="/img/tabla4.jpg" alt="tabla" class="img-carrito" />
        </div>
        <div class="container-article">
          <div class="producto-descripcion">
            <h2>Producto:</h2>
            <a> Tabla de madera con canaleta y agarradera 44 x 30 x 2 cm</a>
          </div>
          <div class="precio">
            <h2>Precio:</h2>
            <p>$6800</p>
          </div>
          <div class="cantidad">
            <h2>Cantidad :</h2>
            <input type="number" min="0" max="9" value="1" />
          </div>
          <div class="total-individual">
            <h2>Subtotal:</h2>
            <p>$6800</p>
          </div>
        </div>
      </article>
    </section>
    <!-- TOTAL CARRITO -->
    <nav class="total-carrito">
      <p class="total-carrito-titulo">Total del carrito</p>
      <div class="bloque-a">
        <p class="total-subtotal">SUBTOTAL</p>
      </div>
      <p class="total-monto">$13.700</p>
      <div class="bloque">
        <p class="total-envio">ENVIO</p>
        <div class="total-envio-opc">
          <form action="">
            <ol>
              <li>
                <label for="#"></label>
                <input type="radio" name="envio" /> Retiro en el local
              </li>
              <li>
                <label for="#"></label>
                <input type="radio" name="envio" />A domicilio (calcular)
              </li>
            </ol>
          </form>
          <form action="">
            <a class="cambiar-direccion" href="#">Cambiar direcci√≥n</a>
          </form>
        </div>
      </div>
      <div class="bloque-a">
        <p class="total">TOTAL</p>
      </div>
      <p class="total-monto">$13.700</p>
      <div class="fin">
        <a href="#">Finalizar Compra</a>
